button#triggerEditarDocente(data-bs-toggle="modal" data-bs-target="#form-editar-docente").d-none Editar

div#form-editar-docente.modal.fade(tabindex="-1")
    .modal-dialog
        .modal-content
            .modal-header
                h5.modal-title Editando docente
                button(type="button", data-bs-dismiss="modal", aria-label="Close").btn-close

            .modal-body 
                select#select-docente(name="idDocente" disabled).form-select.mb-3
                    option(value="0") Seleccione un docente

                .input-group.mb-3
                    input#nombreDocente.form-control(type="text" placeholder="Nombre del docente")
                    button#findDocenteTrigger.btn.btn-secondary(type='button')
                        i.fa-solid.fa-magnifying-glass
                    
                hr
                #optDocentes
                #msgBusquedaDocente.form-text Realice una b√∫squeda

            .modal-footer
                button#btn-cancelar(type="button", data-bs-dismiss="modal").btn.btn-secondary Cancelar 
                button#btn-registro(type="button").btn.btn-primary Registrar 